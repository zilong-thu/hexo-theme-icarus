.highlight
    margin: 0px
    display: block
    overflow-x: auto
    padding: 15px 20px
    font-size: font-size
    font-family: 'Courier New', font-mono
    line-height: font-size * line-height
    table
        margin: 0
        width: auto
        td
            border: none
            padding: 0
        td.code
            padding-right: 20px
    .gutter
        pre
            color: #666
            text-align: right
            padding-right: 20px

.article-entry
    .highlight
        margin: 1.2em 0
        .line
            height: 1.2em;

@import "_highlight/" + highlight